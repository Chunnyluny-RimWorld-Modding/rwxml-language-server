{
  "name": "rwxml-language-server-beta",
  "version": "0.1.0",
  "description": "[Beta] IDE Support for rimworld mod.",
  "main": "dist/client/index.js",
  "scripts": {
    "language-server:build": "webpack -c client.webpack.config.js",
    "vsc-extension:build": "webpack -c server.webpack.config.js",
    "clear-build": "rimraf dist",
    "build": "yarn clear-build && yarn vsc-extension:build && yarn language-server:build"
  },
  "repository": "https://www.github.com/zzzz465/rwxml-language-server",
  "author": "madeline",
  "license": "ISC",
  "engines": {
    "vscode": "^1.47.0"
  },
  "activationEvents": [
    "onLanguage:xml"
  ],
  "contributes": {
    "commands": [
      {
        "command": "rwxml:debug:printXMLDocumentObject",
        "title": "RWXML: (debug) print current document's XMLDocument"
      }
    ]
  },
  "devDependencies": {
    "copy-webpack-plugin": "^9.0.1",
    "rimraf": "^3.0.2",
    "webpack": "^5.50.0",
    "webpack-cli": "^4.8.0"
  }
}
