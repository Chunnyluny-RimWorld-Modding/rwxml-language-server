{
  "name": "rwxml-language-server",
  "version": "1.0.0",
  "repository": "https://github.com/zzzz465/rwxml-language-server.git",
  "author": "madeline <zzzz465@naver.com>",
  "license": "",
  "private": true,
  "scripts": {
    "install/analyzer": "yarn --cwd analyzer",
    "install/language-server": "yarn --cwd language-server",
    "link-analyzer": "yarn --cwd analyzer link && yarn --cwd language-server link @rwxml/analyzer",
    "build/analyzer": "yarn --cwd analyzer build",
    "build/language-server": "yarn --cwd language-server build",
    "build": "yarn build/analyzer && yarn build/language-server",
    "clear": "npx rimraf ./**/dist",
    "purge": "npx rimraf ./**/node_modules",
    "reinstall": "yarn clear && yarn purge && yarn",
    "postinstall": "yarn install/analyzer && yarn install/language-server && yarn build/analyzer && yarn link-analyzer"
  },
  "dependencies": {
    "rimraf": "^3.0.2"
  }
}
